<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
       		<pattern>%d{HH:mm:ss.SSS} %magenta(%-5level) %cyan(%-10logger) : %msg%n</pattern>
        </encoder>
    </appender>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="Exercise 2" level="INFO"/>
    <logger name="Exercise 3" level="INFO"/>
    <logger name="Exercise 4" level="INFO"/>
    <logger name="Exercise 5" level="INFO"/>
    <logger name="Exercise 6" level="INFO"/>
